name = input("type your name: ")
print("Welcome", name, "to this adventure!")

answer = input("you are on a dirt road, it has come to an end and you can go left or right. Which way would you like to go? ").lower()

if answer == "left":
    answer = input("you come to a river, you can walk around it or swim accross? type walk or swim. ").lower()
    if answer == "swim":
        print("you swim accross and were eaten by an alligator!")
    elif answer == "walk":
        print("you walked for many miles, ran out of water and you lost the game!")
    else:
        print('Not a valid option. you lose!')

elif answer == "right":
    answer = input("you come to a bridge! It looks wobbly, do you want to cross it or head back (cross/back)? ").lower()
    if answer == "back":
        print("you go back and lose!")
    elif answer == "cross":
        answer = input("you cross the bridge and meet a stranger. Do you want to talk to him (yes/no)? ")
        if answer == "yes":
            print("you talk to the stranger and they gave you gold. you WIN!")
        elif answer == "no":
            print("you ignored the stranger and they are offended and you LOSE!")
        else:
            print('Not a valid option. you lose!')
    else:
        print('Not a valid option. you lose!')
else:
    print('Not a valid option. you lose!')

print("thank you for trying", name)
