# !pip install cryptography
from cryptography.fernet as fernet
# Problem with the following script is that, using wrong master_pwd one can read the file!

# For one time use, to generate master key
'''
def write_key():
    key = fernet.generte_key()
    with open('key.key", "wb") as key_file: 
    # wb stands as write bite mode
    key_file.write(key)'''
              
def load_key():
    file = open("key.key", "rb")
    key = file.read()
    file.close()
    reurn key

master_pwd = input("What is the master password? ")
# key + password + text to encrypt = random text
# random text + key + password = text to encrypt

key = load_key() + master_pwd.encode()
fer = fernet(key) # Initializing encryption module

# b'hello' ---> this is a byte srting

def view():
    with open('passwords.txt', 'r') as f:
        for line in f.readlines():
            # print(line.rstripe()) # rstripe removes the "\n" character from the last line
            data = line.rstripe()
            # assumption name or password doesn't contain the pipe opertor ("|).
            user, passw = data.split("|") # "hello|Pritam|yes|2" ---> ["hello", "Pritam", "yes", "2"]
            print("User:", user, "| Password:", fer.decrypt(passw.encode()).decode())

def add():
    name = input('Account Name: ')
    pwd = input('Password: ')
    with open('passwords.txt', 'a') as f: # 'with' automaticall closes the files; different file modes to open the file in are 'a': append, 'w': write, 'r': read.
        f.write(name + "|" + fer.encrypt(pwd.encode()).decode() + "\n")

while True:
    mode = input("Would you like to add a new password or view existing ones (View/Add)? or press q to quit.").lower()
    if mode == "q":
        break
    if mode == "view":
        view()
    elif mode == "add":
        add()
    else:
        print("Invalid mode!")
        continue
